<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Hoşgeldiniz!</h1>
                                <% if (locals.validation_error != undefined || locals.success_message != undefined || locals.login_error != undefined) { %>
                                    <%- include('./partials/_mesaj')  %> 
                                <% } %>
                            </div>
                            <form class="user" action="/admin/login" method="post">
                                <div class="form-group">
                                    <input type="email" value="<%= typeof email != 'undefined' ? email : ''%> " name="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input type="password" value="<%= typeof password != 'undefined' ? password : '' %>" name="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Şifre">
                                </div>
                                <button class="btn btn-primary btn-user btn-block">
                                    Giriş
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/admin/forget-password">Şifremi Unuttum</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>